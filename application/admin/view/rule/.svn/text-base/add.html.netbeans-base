<script type="text/javascript" src="__ROOT__/public/beginneradmin/plugins/layui/layui.js"></script>
<script type="text/javascript" src="__ROOT__/public/jquery/layer/layer.js"></script>
<script type="text/javascript" src="__ROOT__/public/res/js/jquery.cxselect.js?Math.random()"></script>
<script src="__ROOT__/public/res/js/bttree.js"></script>
<script type="text/javascript">
layui.use('form', function() {

    var form = layui.form();

    form.on('submit(*)', function(data) {
        var title = $("#title").val();
        var group = "admin";
        var pid = $("#item").val();
        var url = $("#name").val();
        var icon = $("#icon").val();
        var sortorder = $("#sortorder").val();
        var name = "admin/" + url;
        var status = $('input[name="status"]:checked').val();
        var isbutton = $('input[name="isbutton"]:checked').val();
        var id = $("#id").val();
        if (title == '') {
            layer.msg("权限名称不能为空！");
            return;
        }
        var jsonData = {
            "title": title,
            'name': name,
            'group': group,
            "pid": pid,
            "path": pid,
            "url": url,
            "icon": icon,
            "status": status,
            'isbutton': isbutton,
            'sortorder': sortorder

        };
        $.ajax({
            url: "{:url('rule/add')}",
            type: 'post',
            data: jsonData,
            dataType: 'json',
            success: function(json) {
                layer.msg(json.msg);
                if (json.code == 1) {
                    setTimeout(function() {
                        parent.location.reload();
                        var index = parent.layer.getFrameIndex(window.name);
                        parent.layer.close(index);
                    }, 1000)
                }
            }
        })
        return false;
    })
});
$(function() {
    $('#element_id').cxSelect({
        url: 'getAuthCategory', // 提示：如果服务器不支持 .json 类型文件，请将文件改为 .js 文件
        selects: ['item'],
        nodata: 'none'
    });
    //关闭弹窗
    $('#close').click(function() {
        var index = parent.layer.getFrameIndex(window.name);
        parent.layer.close(index);
    });
});
//选中图标
$('#selecticon').click(function() {
    layer.open({
        type: 2,
        title: '选择图标',
        maxmin: true,
        shadeClose: true, //点击遮罩关闭层
        area: ['800px', '450px'],
        content: 'icons'
    });
});
//删除图标
$('#clearicon').click(function() {
    $('#authicon').text("");
    $('#icon').val("");
    $('#authicon').attr("class", "");
});
</script>

