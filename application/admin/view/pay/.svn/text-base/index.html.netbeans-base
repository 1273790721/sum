<script type="text/javascript" src="__ROOT__/public/jquery/jquery-3.2.0.min.js"></script>
<script type="text/javascript" src="__ROOT__/public/beginneradmin/plugins/layui/layui.js"></script>
<script type="text/javascript">
	layui.use('code',function(){
        layui.code({
            encode:true,
            elem:'zi',
        });
    })
	layui.use('layer',function(){
		var layer = layui.layer;
	})
	function sel(id){
		layer.open({
            type: 2,
            title: '查看',
            maxmin: true,
            shadeClose: false,
            area: ['600px','400px'],
            content: ["{:url('table/read')}?id="+id],
        })
	}
	function add(){
		layer.open({
            type: 2,
            title: '添加',
            maxmin: true,
            shadeClose: false,
            area: ['600px','400px'],
            content: ["{:url('table/add')}"],
        })
	}
	function upd(id){
		layer.open({
            type: 2,
            title: '修改',
            maxmin: true,
            shadeClose: false,
            area: ['600px','400px'],
            content: ["{:url('table/upd')}?id="+id],
        })
	}
	function del(id){
        layer.confirm('确定删除该条数据吗？',{icon: 1, title:'提示', btn: ['确定','取消']},
        function(){
            $.ajax({
                type:'post',
                url:"{:url('table/del')}",
                data:{'id':id},
                dataType:'json',
                success:function(data){
                    if(data.code == 1){
                        layer.msg(data.msg);
                        setTimeout(function(){
                            window.location.reload();
                            var index = parent.layer.getFrameIndex(window.name);
                            parent.layer.close(index);
                        },1000);
                    }else if(data.code == 0){
                        layer.msg(data.msg);
                    }
                }
            });
        });
    }
</script>
