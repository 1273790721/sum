    public function money(){
        $where['id']=1;
        $is_user = M("help") ->where($where)->find();
        $result['money'] = empty($is_user['cost']) ? '0' : $is_user['cost'];
        $this->SuccessReturn($result);
    }
    
     /**
      * author liuqin
     *支付接口
